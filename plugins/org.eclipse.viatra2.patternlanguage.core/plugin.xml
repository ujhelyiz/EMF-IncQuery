<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>

<plugin>
   <extension-point id="annotation" name="Pattern Annotation" schema="schema/annotation.exsd"/>

  <extension point="org.eclipse.emf.ecore.generated_package">
    <package 
       uri = "http://www.eclipse.org/viatra2/patternlanguage/core/PatternLanguage" 
       class = "org.eclipse.viatra2.patternlanguage.core.patternLanguage.PatternLanguagePackage"
       genModel = "org/eclipse/viatra2/patternlanguage/core/PatternLanguage.genmodel" /> 
	
  </extension>
  <extension
        point="org.eclipse.viatra2.emf.incquery.base.wellbehaving.derived.features">
     <wellbehaving-derived-feature
           classifier-name="PatternBody"
           feature-name="variables"
           package-nsUri="http://www.eclipse.org/viatra2/patternlanguage/core/PatternLanguage">
     </wellbehaving-derived-feature>
     <wellbehaving-derived-feature
           classifier-name="Variable"
           feature-name="references"
           package-nsUri="http://www.eclipse.org/viatra2/patternlanguage/core/PatternLanguage">
     </wellbehaving-derived-feature>
     <wellbehaving-derived-feature
           classifier-name="VariableReference"
           feature-name="variable"
           package-nsUri="http://www.eclipse.org/viatra2/patternlanguage/core/PatternLanguage">
     </wellbehaving-derived-feature>
  </extension>





</plugin>
